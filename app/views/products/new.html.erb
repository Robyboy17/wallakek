<%= turbo_frame_tag "modal" do %>
  <div data-controller="modal">
    <div data-action="click->modal#close" class="fixed z-10 w-full h-full top-0 left-0 bg-black bg-opacity-40" ></div>
    <div data-modal-target="sidebar" class="fixed top-0 right-0 z-20 w-1/2 sm:w-3/6 lg:w-2/6 h-full bg-gray-200 overflow-y-scroll shadow flex flex-col ease-in-out duration-300 p-5 translate-x-full">
<!--      <p data-action="click->modal#close">❌</p>-->
      <button data-action="click->modal#close"><%= image_tag 'icons/close.svg', width: 35, height: 35 %></button>
      <h2 class="font-bold text-center mb-2"><%= t('.title') %></h2>

      <%= render 'form' %>
    </div>
  </div>
<% end %>
